                <a href="/NMC_/Index">NMC</a>
                <a href="#careers">IT&TELE</a>
            </div>
        </div>
        <div class="subnav">
            <button class="subnavbtn">PARMOTIONAL COURSE<i class="fa fa-caret-down"></i></button>
            <div class="subnav-content">
                <a href="#bring">SIRCO</a>
                <a href="#deliver">HTC</a>
                <a href="#package">STC</a>
                <a href="#express">JTC</a>
                <a href="#express">BTC</a>
            </div>
        </div>
        <div class="subnav">
            <button class="subnavbtn">BASIC COURSE<i class="fa fa-caret-down"></i></button>
            <div class="subnav-content">
                <a href="#link1">BHTC</a>
                <a href="#link2">BTC</a>
                <a href="#link3">BSC</a>

            </div>
        </div>

    </div>
    <div class="container-fluid">
        <div class="row">

            <div class="col-sm-2" style="min-height:100%;width:15%">
                <div class="list-group">
                    @RenderSection("linux", required: false)
                </div>
            </div>
            
            <div class=" col-sm-10" style="background-color:aliceblue;width:85%">
                @RenderBody()
                @RenderSection("scripts", required: false);
                @RenderSection("export", required: false);
            </div>



        </div>
    </div>
    
</body>
</html>

